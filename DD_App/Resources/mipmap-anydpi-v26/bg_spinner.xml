<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <layer-list>
      <item>
        <shape>
          <gradient android:angle="90" android:endColor="#E8B0E2" android:startColor="#3B1A37" android:type="linear" />
          <stroke android:width="1dp" android:color="#910080" />
          <corners android:radius="4dp" />
          <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape>
      </item>
      <item >
        <bitmap android:gravity="bottom|right" android:src="@mipmap/chevron" />
      </item>
    </layer-list>
  </item>
</selector>